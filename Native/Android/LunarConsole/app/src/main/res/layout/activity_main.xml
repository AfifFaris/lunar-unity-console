<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/test_edit_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/test_button_log_debug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debug"/>

            <Button
                android:id="@+id/test_button_log_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning"/>

            <Button
                android:id="@+id/test_button_log_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/test_edit_text_delay"
                style="@style/IntEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1000"/>

            <Button
                android:id="@+id/test_button_start_logger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_logger_start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/test_edit_text_capacity"
                style="@style/IntEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1024"/>

            <Button
                android:id="@+id/test_button_set_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/test_edit_text_trim"
                style="@style/IntEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="128"/>

            <Button
                android:id="@+id/test_button_set_trim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/test_checkbox_use_main_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Use main thread"/>

        <CheckBox
            android:id="@+id/test_checkbox_enable_stack_trace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Enable stack trace"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" android:orientation="vertical">

        <Button
            android:id="@+id/test_button_show_console"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Console"/>

        <Button
            android:id="@+id/test_button_show_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Overlay"/>

        <Button
            android:id="@+id/test_button_log_exception"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_log_error"/>

    </LinearLayout>


</RelativeLayout>
